<div id="<%= dom_id quote %>">



<div class="card">
  <div class="card-header">
    Quote
  </div>

  <div class="card-body">
    <h5 class="card-title"><strong><%=quote.saying%></strong></h5>
    <p class="card-text"><%= "- " + quote.said_by %></p>

    <div class="d-flex gap-2">
    <button type="button" class="btn btn-primary"><i class="bi bi-trash3" style="color: white"><%= link_to "Edit", edit_quote_path(quote), style: "color: white;" %></i></button>

    <button type="button" class="btn btn-success" ><%= link_to "like", like_quote_path(quote), method: :post  %><i class="bi bi-hand-thumbs-up" style="color: white"></i></button>

        <%= button_to @quote, method: :delete, class: "btn btn-danger" do %>
        <i class="bi bi-trash3" style="color: white;"></i> Delete
          <% end %>
</div>
  </div>
</div>

</div>
